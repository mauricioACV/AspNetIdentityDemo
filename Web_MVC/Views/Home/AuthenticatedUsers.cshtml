@using Microsoft.Owin.Security

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AutenticatedUsers</title>
</head>
<body>
    <div>
        <h1>Bienvenidos usuarios autenticados y autorizados</h1>
    </div>

    <div>
        <h1>Enlazar con cuenta externa</h1>
    </div>
    @using (Html.BeginForm("ExternalLinkLogin", "Account"))
    {
        @Html.AntiForgeryToken()
        var loginProviders = Context.GetOwinContext().Authentication.GetExternalAuthenticationTypes();
        <div>
            @foreach(AuthenticationDescription p in loginProviders)
            {
                <button type="submit"
                        id="@p.AuthenticationType"
                        name="provider"
                        value="@p.AuthenticationType"
                        title="Inicia Sesion utilizando tu cuenta @p.Caption">
                    @p.AuthenticationType
                </button>
            }
        </div>
    }

</body>
</html>
